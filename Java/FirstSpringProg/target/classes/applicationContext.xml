<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="classicalMusicBean"
          class="ru.vartazaryan.springprog.ClassicalMusic">
    </bean>

    <bean id="rockMusicBean"
          class="ru.vartazaryan.springprog.RockMusic">
    </bean>

    <bean id="popMusicBean"
          class="ru.vartazaryan.springprog.PopMusic">
    </bean>

    <!--This is dependency injection by constructor
    <bean id="player"
          class="ru.vartazaryan.springprog.Player">
          <constructor-arg ref="musicBean"/>
    </bean>  -->

    <!--This is dependency injection by setter
    <bean id="player"
          class="ru.vartazaryan.springprog.Player">
        <property name="music" ref="musicBean"/>

        <property name="name" value="${musicPlayer.name}"/>  //this stuff is taken from properties file
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean> -->

   <bean id="player"
         class="ru.vartazaryan.springprog.Player">

       <constructor-arg >
           <list>
               <ref bean="classicalMusicBean"/>
               <ref bean="rockMusicBean"/>
               <ref bean="popMusicBean"/>
           </list>
       </constructor-arg>

         <property name="name" value="${musicPlayer.name}"/>
         <property name="volume" value="${musicPlayer.volume}"/>
   </bean>

</beans>